# Formatting aligned with kpi99 project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{html,css,js,json,yml,yaml}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
